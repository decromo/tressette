{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/server",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build server",
            "miDebuggerPath": "/run/current-system/sw/bin/gdb"
        },
        {
            "name": "Debug client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/client",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build client",
            "miDebuggerPath": "/run/current-system/sw/bin/gdb"
        }
    ]
}