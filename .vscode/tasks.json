{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build client",
            "command": "/run/current-system/sw/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "client.c",
                "common.c",
                "network.c",
                "client_network.c",
                "utils.c",
                "threads.c",
                "-pthread",
                "-o",
                "${workspaceFolder}/client"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "cppbuild",
            "label": "Build server",
            "command": "/run/current-system/sw/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "server.c",
                "network.c",
                "server_network.c",
                "common.c",
                "utils.c",
                "threads.c",
                "-pthread",
                "-o",
                "${workspaceFolder}/server"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ],
    "version": "2.0.0"
}